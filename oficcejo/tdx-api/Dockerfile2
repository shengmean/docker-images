# 多阶段构建 - 第一阶段：构建
FROM golang:1.22-alpine AS builder

# 替换Alpine镜像源为阿里云
RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories

# 安装git
RUN apk add --no-cache git

# 设置工作目录
WORKDIR /app

# 设置Go代理
ENV GO111MODULE=on \
    GOPROXY=https://goproxy.cn,https://mirrors.aliyun.com/goproxy/,direct \
    CGO_ENABLED=0

# 克隆并复制源码
RUN git clone --depth 1 https://github.com/oficcejo/tdx-api.git . && \
    rm -rf .git

# 下载 Go 模块
RUN go mod download

# 编译
RUN go build -ldflags="-s -w" -o stock-web ./web

# 第二阶段：运行
FROM alpine:latest

# 替换Alpine镜像源为阿里云
RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/g' /etc/apk/repositories && \
    apk --no-cache add ca-certificates tzdata

# 设置时区
ENV TZ=Asia/Shanghai

# 创建非root用户
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

WORKDIR /app

# 从构建阶段复制文件
COPY --from=builder --chown=appuser:appuser /app/stock-web .
COPY --from=builder --chown=appuser:appuser /app/web/static ./static

# 切换到非root用户
USER appuser

# 暴露端口
EXPOSE 8080

# 健康检查（简化版）
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget -qO- http://localhost:8080/api/health || exit 1

# 启动应用
CMD ["./stock-web"]
